{
  "name": "notes-desktop",
  "version": "1.0.0",
  "description": "Notes Desktop Application",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "dependencies": {
    "app-builder-bin": "^4.2.0",
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "notes-desktop": "file:",
    "quill": "^2.0.2",
    "v8-compile-cache": "^2.4.0"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.chaitanya.notesapp",
    "productName": "Notes",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
